{
  "name": "Minecraft Cheat Mod Dev",
  "image": "mcr.microsoft.com/devcontainers/java:0-11",
  "features": {
    "ghcr.io/devcontainers/features/gradle:1": {
      "version": "7.5"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-dependency",
        "vscjava.vscode-gradle"
      ]
    }
  },
  "postCreateCommand": "chmod +x gradlew && ./gradlew build",
  "forwardPorts": [25565]
}
